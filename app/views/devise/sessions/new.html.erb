<div class="d-flex justify-content-center">
<div class="w-50 p-3">
        <h2 class="post_intro">Sign in</h2>
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, html: {class: "form-control"}, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, html: {class: "form-control"}, autocomplete: "current-password" %>
          </div>
        </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>
      <div class="form-group">
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
</div>
</div>



